@model PagedList.IPagedList<Blog.Models.PostViewModel>
@using PagedList.Mvc;

<style type="text/css">
    p {
        line-height: 1.5em;
        max-height: 4.5em;
        overflow: hidden;
    }
    .list{
        margin-top:10px;
        margin-left:0px;
        padding:0px;
    }
    .item {
        margin-bottom: 5px;
        padding: 0px;
    }
    .pages {
        margin: 0px;
        padding: 0px;
    }
</style>

<div class="row list">
    <div class="col-lg-12 col-md-12 col-xs-12">
        @for (var i = 0; i < Model.Count(); i++)
            {
            <div class="col-md-10 item">
                <h4>@Html.ActionLink(@Model.ElementAt(i).Title, "ViewPost", "Blog", new { id = @Model.ElementAt(i).PostId }, null)</h4>
                @Model.ElementAt(i).Content <br />
            </div>
        }
        <br />
    </div>
</div>

<div class="col-md-12 col-xs-12">
    @Html.PagedListPager(Model, page => Url.Action("Blog", new { page }))
</div>
